RTWord {
  input = item+
  item =
    | string -- string
    | space -- space
    | html -- html
    | separator -- separator
    | word -- word

  word = legalchar+
  legalchar = ~separator ~space any

  html = "<" "/"? tagChar+ ">"
  separator = ~alnum any
  comment = "//" (~"\n" any)* "\n"
  space += comment
  string = dq (~dq any)* dq
  dq = "\""
  tagChar = ~">" ~"<" any

}

Word <: RTWord {
  separator += ";" | ":" | "{" | "}" | "->" | ","
}
