RTWord {
  input = item+
  item =
    | space -- space
    | separator -- separator
    | string -- string
    | html -- html
    | word -- word

  word = legalchar+
  legalchar = ~separator ~space any

  html = "<" "/"? letter+ ">"
  separator = "(" | ")" | "//"
  comment = "//" (~"\n" any)* "\n"
  space += comment
  string = dq (~dq any)* dq
  dq = "\""

}

Word <: RTWord {
  separator += ";" | ":" | "{" | "}" | "->" | ","
}
